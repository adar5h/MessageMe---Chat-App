<h2 class="ui center aligned icon header">
  <i class="circular blue coffee icon"></i>
  Break the ice!
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
      <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %> <%# an Ajax request is sent and the page won't reload as we've sent the request remotely%>
      <%# We don't want to submit the form using a https POST request. We want to submit it remotely, therefore remote: true/local:false for rails 7 %>
        <div class="field">
          <div class="ui fluid icon input">
              <%= f.text_field :body%>
              <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
          </div>
        </div>
       <% end %>
      </div>
    </div>
  </div>



  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
     <div class="content">
      <div class="ui inverted vertical menu">
        <a class="active item">
          Home
        </a>
        <a class="item">
          Messages
        </a>
        <a class="item">
          Friends
        </a>
      </div>
      </div>
    </div>
  </div>
</div>
</div>