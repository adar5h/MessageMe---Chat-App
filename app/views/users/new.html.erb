<% if @user.errors.any?%>
<%= puts "Entering error zone" %>
  <h2>The following errors prevented the user from being saved.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end%>
  </ul>
<%end%>

<div class="ui placeholder segment", style="margin-top:30px;">
    <%= form_for(:user, html: {class: "ui form", role: "form"}, url: users_path) do |f| %>
    <center>
        <div class="field" id="un">
            <%= f.label "Username" %>
            <%= f.text_field :username, placeholder:"Username" %>
            
        </div>
        <div class="field" id="un">
            <%= f.label "Password" %>
            <%= f.password_field :password, placeholder:"Password" %>
        </div>
        <%= f.button "Submit", class: "ui blue submit button" %>
    </center>
    <% end %>
</div>
